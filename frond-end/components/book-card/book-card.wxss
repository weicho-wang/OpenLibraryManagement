.book-item {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  gap: 20rpx;
}

.book-item image {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  background: #eee;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.author {
  font-size: 26rpx;
  color: #666;
}

.stock {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.stock.available {
  background: #e6f7f3;
  color: #2c9678;
}

.stock.empty {
  background: #f5f5f5;
  color: #999;
}
