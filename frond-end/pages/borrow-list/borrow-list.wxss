.container {
  padding: 24rpx;
}

.tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  color: #666;
  font-size: 28rpx;
}

.tab.active {
  color: #2c9678;
  background: #e9f8f4;
  font-weight: 600;
}

.quick-btn {
  margin-bottom: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  color: #222;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.meta {
  font-size: 24rpx;
  color: #777;
  margin-bottom: 6rpx;
}

.empty {
  min-height: 40vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
