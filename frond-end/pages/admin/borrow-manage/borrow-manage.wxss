.container { padding: 20rpx; min-height: 100vh; background: #f5f5f5; }
.tabs { display: flex; background: #fff; border-radius: 12rpx; margin-bottom: 16rpx; overflow: hidden; }
.tab { flex: 1; text-align: center; padding: 18rpx 0; color: #666; }
.tab.active { color: #2c9678; background: #e9f8f4; font-weight: 600; }
.badge { margin-left: 8rpx; color: #999; }
.badge.warning { color: #ff4d4f; }
.borrow-list { display: flex; flex-direction: column; gap: 16rpx; }
.borrow-item { background: #fff; border-radius: 12rpx; padding: 16rpx; }
.title { font-size: 30rpx; font-weight: 600; color: #222; }
.isbn,.name,.date,.due { display: block; font-size: 24rpx; color: #666; margin-top: 6rpx; }
.red { color: #ff4d4f; }
.actions { margin-top: 12rpx; display: flex; gap: 12rpx; }
.returned-tag { color: #999; font-size: 24rpx; }
