.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }
.stats { background: #fff; border-radius: 12rpx; padding: 20rpx; display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.list { display: flex; flex-direction: column; gap: 12rpx; }
.item { background: #fff; border-radius: 12rpx; padding: 16rpx; }
.title { display: block; font-size: 30rpx; color: #222; font-weight: 600; }
.meta { display: block; color: #666; font-size: 24rpx; margin-top: 6rpx; }
.empty { text-align: center; color: #999; margin-top: 40rpx; }
