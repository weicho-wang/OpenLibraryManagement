.container { padding: 20rpx; min-height: 100vh; background: #f5f5f5; }
.search-bar { display: flex; gap: 16rpx; margin-bottom: 16rpx; }
.search-bar input { flex: 1; background: #fff; border-radius: 10rpx; padding: 18rpx; }
.filter-bar { white-space: nowrap; margin-bottom: 16rpx; }
.filter-item { display: inline-block; padding: 10rpx 20rpx; margin-right: 12rpx; background: #fff; border-radius: 999rpx; color: #666; }
.filter-item.active { color: #2c9678; background: #e6f7f3; }
.book-list { display: flex; flex-direction: column; gap: 16rpx; }
.book-item { display: flex; background: #fff; border-radius: 12rpx; padding: 16rpx; gap: 16rpx; }
.book-item image { width: 120rpx; height: 160rpx; border-radius: 8rpx; background: #eee; }
.info { flex: 1; }
.title-row { display: flex; justify-content: space-between; gap: 10rpx; }
.title { font-size: 30rpx; font-weight: 600; color: #222; }
.meta,.isbn { display: block; color: #666; font-size: 24rpx; margin-top: 8rpx; }
.stock { font-size: 22rpx; color: #2c9678; }
.stock.low { color: #ff9800; }
.stock.zero { color: #ff4d4f; }
.actions { display: flex; flex-direction: column; justify-content: space-between; font-size: 24rpx; }
.btn-edit { color: #2c9678; }
.btn-delete { color: #ff4d4f; }
.empty,.load-more { text-align: center; color: #999; margin: 24rpx 0; }
.fab { position: fixed; right: 30rpx; bottom: 80rpx; width: 88rpx; height: 88rpx; border-radius: 50%; background: #2c9678; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 52rpx; }
