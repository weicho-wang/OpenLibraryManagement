.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.scan-section {
  background: #2c9678;
  color: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.scan-section .isbn {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
  font-family: monospace;
}

.scan-section .tip {
  font-size: 24rpx;
  opacity: 0.8;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
}

.form-item .label {
  min-width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.form-item input,
.form-item textarea {
  flex: 1;
  font-size: 28rpx;
}

.form-item textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.cover-preview {
  width: 100%;
  height: 400rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.actions button {
  flex: 1;
}
