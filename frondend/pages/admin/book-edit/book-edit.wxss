.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.header .title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.header .isbn {
  font-size: 24rpx;
  opacity: 0.9;
  font-family: monospace;
}

.cover-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.cover-section .cover {
  width: 300rpx;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.cover-section .tip {
  display: block;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #667eea;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
  gap: 15rpx;
}

.form-item .label {
  min-width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.form-item .label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 8rpx;
}

.form-item input, .form-item textarea {
  flex: 1;
  font-size: 28rpx;
}

.form-item .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.stock-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stock-control input {
  width: 100rpx;
  text-align: center;
  background: #f5f5f5;
  padding: 15rpx;
  border-radius: 8rpx;
}

.btn-minus, .btn-plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #667eea;
  color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
}

.form-item textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #667eea;
}

.borrow-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.borrow-stats text {
  font-size: 26rpx;
  color: #666;
}

.borrow-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.borrow-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.borrow-item .user {
  min-width: 140rpx;
  font-size: 26rpx;
  color: #333;
}

.borrow-item .date {
  flex: 1;
  font-size: 24rpx;
  color: #666;
}

.borrow-item .status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.status.active {
  background: #e6f7f3;
  color: #2c9678;
}

.status.returned {
  background: #f0f0f0;
  color: #999;
}

.empty {
  text-align: center;
  color: #999;
  padding: 40rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.actions button {
  flex: 1;
}

.danger-zone {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx dashed #ff4d4f;
}

.danger-zone button {
  background: #ff4d4f;
  color: #fff;
}
