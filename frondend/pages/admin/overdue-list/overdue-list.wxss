.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }
.header { background: #fff; border-radius: 12rpx; padding: 20rpx; margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 600; color: #222; display: block; }
.subtitle { font-size: 24rpx; color: #666; display: block; margin: 10rpx 0 14rpx; }
.overdue-list { display: flex; flex-direction: column; gap: 14rpx; }
.overdue-item { background: #fff; border-radius: 12rpx; padding: 16rpx; display: flex; align-items: center; gap: 16rpx; }
.days-badge { width: 86rpx; height: 86rpx; border-radius: 50%; background: #fff2f0; color: #ff4d4f; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.days-badge .num { font-size: 32rpx; font-weight: 600; }
.days-badge .unit { font-size: 20rpx; }
.detail { flex: 1; }
.book { display: block; font-size: 30rpx; color: #222; font-weight: 600; }
.user,.due { display: block; font-size: 24rpx; color: #666; margin-top: 6rpx; }
