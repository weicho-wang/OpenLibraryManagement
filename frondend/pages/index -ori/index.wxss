.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-box {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.search-box input {
  flex: 1;
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.scan-section {
  background: linear-gradient(135deg, #2c9678 0%, #3db89c 100%);
  border-radius: 16rpx;
  padding: 60rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #fff;
}

.scan-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.scan-btn .icon {
  font-size: 80rpx;
}

.scan-btn .text {
  font-size: 36rpx;
  font-weight: bold;
}

.tip {
  display: block;
  margin-top: 20rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.book-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
