.container {
  padding: 24rpx;
}

.book-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
}

.book-header image {
  width: 220rpx;
  height: 300rpx;
  border-radius: 8rpx;
  background: #f2f2f2;
}

.meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
}

.author,
.publisher,
.isbn {
  font-size: 26rpx;
  color: #666;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 6rpx;
}

.tag {
  background: #e6f7f3;
  color: #2c9678;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.actions {
  margin-top: 30rpx;
}

.empty,
.loading {
  min-height: 50vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}
